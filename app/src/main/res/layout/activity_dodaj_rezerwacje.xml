<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marcin.aplikacja_inzynierska.DodajRezerwacjeActivity">

    <EditText
        android:id="@+id/editImie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/hintImie"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNazwisko"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/hintNazwisko"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editImie"
        app:layout_constraintStart_toStartOf="@+id/editImie"
        app:layout_constraintTop_toBottomOf="@+id/editImie" />

    <EditText
        android:id="@+id/editNumerTel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/editNumerTel"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/editNazwisko"
        app:layout_constraintStart_toStartOf="@+id/editNazwisko"
        app:layout_constraintTop_toBottomOf="@+id/editNazwisko" />

    <Button
        android:id="@+id/buttonkrok1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:text="@string/buttonkrok1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNumerTel" />

</android.support.constraint.ConstraintLayout>
